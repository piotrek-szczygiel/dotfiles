[core]
    editor = zed --wait
    autocrlf = input

[pull]
    rebase = true

[fetch]
    prune = true

[diff]
    algorithm = histogram

[init]
    defaultBranch = main

[push]
    autoSetupRemote = true

[commit]
    gpgsign = true

[gpg]
    format = ssh

[gpg "ssh"]
    program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"


[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
